<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.asianwallets.base.dao.PayTypeMapper">
    <resultMap id="BaseResultMap" type="com.asianwallets.common.entity.PayType">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="language" property="language" jdbcType="VARCHAR"/>
        <result column="picon" property="picon" jdbcType="VARCHAR"/>
        <result column="dicon" property="dicon" jdbcType="VARCHAR"/>
        <result column="mode" property="mode" jdbcType="BIT"/>
        <result column="enabled" property="enabled" jdbcType="BIT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="creator" property="creator" jdbcType="VARCHAR"/>
        <result column="modifier" property="modifier" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="extend1" property="extend1" jdbcType="VARCHAR"/>
        <result column="extend2" property="extend2" jdbcType="VARCHAR"/>
        <result column="extend3" property="extend3" jdbcType="VARCHAR"/>
        <result column="extend4" property="extend4" jdbcType="VARCHAR"/>
        <result column="extend5" property="extend5" jdbcType="VARCHAR"/>
        <result column="extend6" property="extend6" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, name, language, picon, dicon, mode, enabled, create_time, update_time, creator,
    modifier, remark, extend1, extend2, extend3, extend4, extend5, extend6
    </sql>

    <select id="selectByName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from pay_type
        where
        name = #{name}
    </select>

    <select id="pagePayType" resultType="com.asianwallets.common.vo.PayTypeVO">
        select
        extend1 as id,
        name,
        language,
        picon,
        dicon,
        mode,
        enabled,
        create_time as createTime,
        update_time as updateTime,
        creator,
        modifier,
        remark
        from pay_type
        <where>
            <if test="payType != null and payType != ''">
                extend1 LIKE CONCAT(CONCAT('%', #{payType} ), '%' )
            </if>
            <if test="name != null and name != ''">
                name LIKE CONCAT(CONCAT('%', #{name} ), '%' )
            </if>
            <if test="language != null and language != ''">
                language = #{language}
            </if>
            <if test="mode != null">
                and mode = #{mode}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
        </where>
    </select>
    <select id="selectByExtend1AndLanguage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from pay_type
        where language = #{language} and extend1 = #{extend1}
    </select>

    <select id="inquireAllPaytype" resultType="com.asianwallets.common.vo.PayTypeVO">
        select extend1     as id,
               name,
               language,
               picon,
               dicon,
               mode,
               enabled,
               create_time as createTime,
               update_time as updateTime,
               creator,
               modifier,
               remark
        from pay_type
        where language = #{language}
          and enabled = 1;
    </select>

    <select id="selectByExtend1" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from pay_type
        where extend1 = #{extend1}
    </select>

</mapper>