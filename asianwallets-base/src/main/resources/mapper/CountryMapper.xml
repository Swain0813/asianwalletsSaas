    <sql id="Base_Column_List">
        id, parent_id, en_country, en_state, en_city, cn_country, cn_state, cn_city, create_time,
    update_time, creator, modifier, remark, extend1, extend2, extend3, extend4, extend5, 
    extend6,enabled,area_code
    </sql>

    <update id="banCountry">
        update country c1,country c2,country c3
        set c1.enabled = #{enabled},
            c2.enabled = #{enabled},
            c3.enabled = #{enabled}
        where c1.id = c2.parent_id
          and c2.id = c3.parent_id;
    </update>
    <update id="updateEnabledById">
        update asianwallets_saas.country
        set enabled = #{enabled}
        where id = #{id};
    </update>

    <select id="selectByCnAndEnCountry" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from country where en_country = #{enCountry} or cn_country = #{cnCountry};
    </select>

    <select id="selectByCnAndEnState" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from country where cn_state = #{cnState} or en_state = #{enState};
    </select>

    <select id="selectByCnAndEnCity" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from country where cn_city = #{cnCity} or en_city = #{enCity};
    </select>

    <select id="selectByParentId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from country where id = #{parentId};
    </select>

    <select id="selectByCountry" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from country
        <where>
            <if test="enCountry != null">
                en_country = #{enCountry,jdbcType=VARCHAR},
            </if>
            <if test="enState != null">
                or en_state = #{enState,jdbcType=VARCHAR},
            </if>
            <if test="enCity != null">
                or en_city = #{enCity,jdbcType=VARCHAR},
            </if>
            <if test="cnCountry != null">
                or cn_country = #{cnCountry,jdbcType=VARCHAR},
            </if>
            <if test="cnState != null">
                or cn_state = #{cnState,jdbcType=VARCHAR},
            </if>
            <if test="cnCity != null">
                or cn_city = #{cnCity,jdbcType=VARCHAR},
            </if>
        </where>
    </select>

    <select id="pageCountry" resultMap="BaseResultMap">
        select
        a.id, a.parent_id, a.en_country, b.en_state, c.en_city, a.cn_country, b.cn_state, c.cn_city, a.enabled,
        a.create_time, a.update_time, a.creator, a.modifier, a.remark, a.extend1, a.extend2, a.extend3, a.extend4,
        a.extend5, a.extend6
        from country a left join country b on a.id = b.parent_id left join country c on b.id = c.parent_id

        <where>
            <if test="enCountry != null and enCountry != ''">
                and a.en_country = #{enCountry}
            </if>
            <if test="enCity != null and enCity != ''">
                and c.en_city = #{enCity}
            </if>
            <if test="enState != null and enState != ''">
                and b.en_state = #{enState}
            </if>
            <if test="cnCountry != null and cnCountry != ''">
                and a.cn_country = #{cnCountry}
            </if>
            <if test="cnCity != null and cnCity != ''">
                and c.cn_city = #{cnCity}
            </if>
            <if test="enState != null and enState != ''">
                and b.cn_state = #{cnState}
            </if>
        </where>

    </select>

    <select id="selectNewestCountryCode" resultType="java.lang.String">
        select area_code
        from country
        order by area_code DESC
        LIMIT 1;
    </select>

    <select id="selectAllByParentId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from country
        <where>
            <if test="parentId != null and parentId !=''">
                and parent_id = #{parentId}
            </if>
            <if test="parentId ==null">
                and parent_id is null
            </if>
        </where>
    </select>

    <select id="inquireAllCountry" resultMap="CountryVOResultMap">
        select a.id         as country_id,
               a.area_code  as area_code,
               a.en_country as en_country_name,
               a.cn_country as cn_country_name,
               b.id         as state_id,
               b.parent_id  as state_parent_id,
               b.en_state   as en_state_name,
               b.cn_state   as cn_state_name
        from country a
                 left join country b on a.id = b.parent_id
        where a.cn_country is not null
#         where a.id = b.parent_id order by a.create_time DESC
    </select>


